{% extends 'connected.html.twig' %}

{% block body %}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
         Reclamations
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Sender Username</th>
                    <th>State</th>
                    <th>Respond</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Sender Username</th>
                    <th>State</th>
                    <th>Respond</th>
                    
                </tr>
            </tfoot>
            <tbody>
                                        
                                        
            {% for a in list %}
                                    
            <tr>
                <td>{{a.id}} </td>
                <td>{{a.sender.username}} </td>
                <td>{{a.etat}} </td>
                <td><a href={{path('answer_reclamation',{id:a.id})}}><i class="fa-solid fa-reply fa-lg"></i> </a> </td>
                                            
            </tr>
            {% endfor %}
                                     
                                       
            </tbody>
        </table>
    </div>
</div>
                   
{% endblock %}